{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*.ts",
    ],
    "typeRoots": [
        "./src",
        "./node_modules/@types/"
    ]
}